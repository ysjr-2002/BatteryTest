<base:BaseWindow
    x:Class="BITools.DataManager.TCRecordDataWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:base="clr-namespace:BITools"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
    xmlns:local="clr-namespace:BITools.DataManager"
    xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:syscontrols="clr-namespace:BITools.UIControls"
    xmlns:vm="clr-namespace:BITools.ViewModel"
    Title="查看历史数据"
    Width="1200"
    Height="700"
    d:DataContext="{d:DesignInstance vm:LiveDataViewModel}"
    Style="{StaticResource WindowStyleWithCloseBtn}"
    mc:Ignorable="d">
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadedCommand}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="HorizontalAlignment" Value="Right" />
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="40" />
            <RowDefinition Height="2*" />
        </Grid.RowDefinitions>

        <GroupBox Header="查询条件">
            <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                <CheckBox Content="精确" Style="{StaticResource CheckBox.MapToolBar.Style}" />

                <syscontrols:WatermarkTextBox
                    Width="120"
                    Margin="10,0,0,0"
                    Style="{StaticResource ComprehensiveTextBox.WatermarkTextBox.Style}"
                    Watermark="产品订单号" />

                <syscontrols:WatermarkTextBox
                    Width="120"
                    Margin="10,0,0,0"
                    Style="{StaticResource ComprehensiveTextBox.WatermarkTextBox.Style}"
                    Watermark="机型名" />

                <TextBlock Margin="10,0,0,0" Text="日期:" />

                <syscontrols:HZDateTimePicker
                    Width="170"
                    Height="30"
                    Margin="5,0,0,0"
                    HorizontalAlignment="Left"
                    CustomFormat="yyyy-MM-dd HH:mm:ss"
                    Format="Custom"
                    ShowCheckBox="False"
                    Text="{Binding StartDateTime}" />

                <TextBlock Margin="2,0" Text="至" />
                <syscontrols:HZDateTimePicker
                    Width="170"
                    Height="30"
                    HorizontalAlignment="Left"
                    CustomFormat="yyyy-MM-dd HH:mm:ss"
                    Format="Custom"
                    ShowCheckBox="False"
                    Text="{Binding EndDateTime}" />

                <TextBlock Margin="10,0,0,0" Text="操作员:" />
                <ComboBox
                    Width="100"
                    Height="28"
                    Margin="5,0,0,0"
                    DisplayMemberPath="UserName"
                    ItemsSource="{Binding UserCollection}"
                    SelectedItem="{Binding SelectedUser}"
                    SelectedValuePath="UserID" />

                <TextBlock Margin="10,0,0,0" Text="区间:" />
                <ComboBox
                    Width="100"
                    Height="28"
                    Margin="5,0,0,0"
                    DisplayMemberPath="Name"
                    ItemsSource="{Binding QujianCollection}"
                    SelectedItem="{Binding SelectedQujian}"
                    SelectedValuePath="Value" />

                <syscontrols:ButtonEx
                    Width="80"
                    Margin="10,0,0,0"
                    Command="{Binding QueryCommand}"
                    Content="查询" />
            </StackPanel>
        </GroupBox>

        <DataGrid
            Grid.Row="1"
            AutoGenerateColumns="False"
            CanUserAddRows="False"
            CanUserDeleteRows="False"
            IsReadOnly="True"
            ItemsSource="{Binding TCDataHistoryCollection}"
            Style="{StaticResource dgConfig}">
            <DataGrid.Columns>
                <DataGridTextColumn
                    Width="150"
                    Binding="{Binding cpdhh}"
                    Header="产品订单号" />
                <DataGridTextColumn
                    Width="150"
                    Binding="{Binding jx}"
                    Header="机型名" />
                <DataGridTextColumn
                    Width="150"
                    Binding="{Binding qj}"
                    Header="区间" />
                <DataGridTextColumn
                    Width="150"
                    Binding="{Binding lhzsj}"
                    Header="老化总时间" />
                <DataGridTextColumn
                    Width="150"
                    Binding="{Binding czy}"
                    Header="操作员" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding path}"
                    Header="数据文件路径(双击可打开Excel报表)" />
            </DataGrid.Columns>
        </DataGrid>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120" />
                <ColumnDefinition />
                <ColumnDefinition Width="140" />
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" Text="查数据文件:" />
            <TextBox
                Grid.Column="1"
                Height="24"
                Margin="5,0,0,0"
                VerticalContentAlignment="Center" />
            <syscontrols:ButtonEx
                Grid.Column="2"
                Width="120"
                Height="24"
                Command="{Binding ExportCommand}"
                Content="导出Excel报表"
                NormalImage="/BITools;component/Images/excel.png" />
        </Grid>

        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="30" />
                    <RowDefinition />
                    <RowDefinition Height="30" />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <TextBlock
                    Grid.Row="0"
                    HorizontalAlignment="Center"
                    Text="电压曲线图" />

                <lvc:CartesianChart
                    x:Name="chartV"
                    Grid.Row="1"
                    Series="{Binding VSeries}">
                    <lvc:CartesianChart.AxisX>
                        <lvc:Axis Labels="{Binding VLables}">
                            <lvc:Axis.Separator>
                                <lvc:Separator Step="1" />
                            </lvc:Axis.Separator>
                        </lvc:Axis>
                    </lvc:CartesianChart.AxisX>
                    <lvc:CartesianChart.AxisY>
                        <lvc:Axis
                            Title="V"
                            LabelFormatter="{Binding Formatter}"
                            MinValue="0" />
                    </lvc:CartesianChart.AxisY>
                </lvc:CartesianChart>
                <TextBlock
                    Grid.Row="2"
                    HorizontalAlignment="Center"
                    Text="电流曲线图" />

                <lvc:CartesianChart
                    x:Name="chartA"
                    Grid.Row="3"
                    Series="{Binding ASeries}">
                    <lvc:CartesianChart.AxisX>
                        <lvc:Axis Labels="{Binding ALables}">
                            <lvc:Axis.Separator>
                                <lvc:Separator Step="1" />
                            </lvc:Axis.Separator>
                        </lvc:Axis>
                    </lvc:CartesianChart.AxisX>
                    <lvc:CartesianChart.AxisY>
                        <lvc:Axis
                            Title="A"
                            LabelFormatter="{Binding Formatter}"
                            MinValue="0" />
                    </lvc:CartesianChart.AxisY>
                </lvc:CartesianChart>
            </Grid>

            <Grid Grid.Column="1">
                <DataGrid
                    AutoGenerateColumns="False"
                    CanUserAddRows="False"
                    CanUserDeleteRows="False"
                    ItemsSource="{Binding Records}"
                    Style="{StaticResource dgConfig}">
                    <DataGrid.Columns>
                        <DataGridTextColumn
                            Width="100"
                            Binding="{Binding Time}"
                            Header="记录时间" />
                        <DataGridTextColumn
                            Width="80"
                            Binding="{Binding Input}"
                            Header="输入" />
                        <DataGridTextColumn
                            Width="80"
                            Binding="{Binding X}"
                            Header="控" />
                        <DataGridTextColumn
                            Width="80"
                            Binding="{Binding Voltage}"
                            Header="电压(V)" />
                        <DataGridTextColumn
                            Width="80"
                            Binding="{Binding Ammeter}"
                            Header="电流(A)" />
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>

            <Grid Grid.Column="2" Margin="2,0,0,0">
                <DataGrid
                    AutoGenerateColumns="False"
                    CanUserAddRows="False"
                    CanUserDeleteRows="False"
                    ItemsSource="{Binding Unknowns}"
                    Style="{StaticResource dgConfig}">
                    <DataGrid.Columns>
                        <DataGridTextColumn
                            Width="80"
                            Binding="{Binding Index}"
                            Header="位置" />
                        <DataGridTextColumn
                            Width="80"
                            Binding="{Binding Status}"
                            Header="Pass/Fail" />
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Grid>
    </Grid>
</base:BaseWindow>

