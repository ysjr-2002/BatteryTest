<Window x:Class="BITools.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:BITools"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:syscontrols="clr-namespace:BITools.UIControls"
        Title="节能回馈老化测试系统-BTS100"
        Width="1200"
        Height="600"
        Style="{StaticResource WindowStyleWithMinMaxCloseBtn}"
        WindowStartupLocation="CenterScreen"
        mc:Ignorable="d">
    <Window.Resources>

        <Style TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>

        <SolidColorBrush x:Key="borderBrush" Color="#CCCCCC" />
    </Window.Resources>
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="60" />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <RadioButton Grid.Column="0" Content="登录用户" />
            <RadioButton Grid.Column="1" Content="用户管理" />
            <RadioButton Grid.Column="2" Content="系统设置" />
            <RadioButton Grid.Column="3" Content="参数编辑" />
            <RadioButton Grid.Column="4" Content="报表查询" />
            <RadioButton Grid.Column="5" Content="软件关于" />
        </Grid>

        <syscontrols:LayerView Grid.Row="1" />
        <syscontrols:LayerView Grid.Row="2" />
        <syscontrols:LayerView Grid.Row="3" />
        <syscontrols:LayerView Grid.Row="4" />
    </Grid>
</Window>
