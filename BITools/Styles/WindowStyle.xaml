                                        Foreground="White"
                                        Text="{TemplateBinding Title}" />
                                    <Button
                                        Margin="0,0,52,0"
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Center"
                                        Click="minButton_Click"
