                                        ToolTip="{DynamicResource G_299}" />
                                    <ToggleButton
                                        Margin="0,0,28,0"
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Center"
                                        Click="MaxButton_Click"
                                        Loaded="ToggleButton_Loaded"
                                        Style="{StaticResource FrameCaptionMaxButtonStyle}" />
                                    <Button
                                        x:Name="closeButton"
                                        Margin="0,0,4,0"
                                        HorizontalAlignment="Right"
