<UserControl x:Class="BITools.UIControls.HZWaitLoading"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:gif="http://wpfanimatedgif.codeplex.com"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="300"
             d:DesignWidth="300"
             mc:Ignorable="d">
    <Grid HorizontalAlignment="Center"
          VerticalAlignment="Center"
          Background="White">
        <StackPanel Margin="3" Orientation="Horizontal">
            <Image Width="16"
                   Height="16"
                   VerticalAlignment="Center"
                   gif:ImageBehavior.AnimatedSource="Pack://application:,,,/BITools;Component/Images/main/u1814.gif" />
            <TextBlock x:Name="txt"
                       Margin="14,0,0,0"
                       VerticalAlignment="Center"
                       FontSize="12"
                       Foreground="{StaticResource Foreground.Update.Color}"
                       Text="{DynamicResource loading}" />
        </StackPanel>
    </Grid>
</UserControl>
