<UserControl x:Class="BITools.UIControls.LayerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:BITools.UIControls"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:syscontrols="clr-namespace:BITools.UIControls"
             d:DesignHeight="300"
             d:DesignWidth="800"
             mc:Ignorable="d">
    <UserControl.Resources>
        <SolidColorBrush x:Key="borderBrush" Color="#CCCCCC" />

        <Style x:Key="cellStyle" TargetType="DataGridCell">
            <Setter Property="FontSize" Value="14" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="RenderOptions.BitmapScalingMode" Value="NearestNeighbor" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type DataGridCell}">
                        <Border Name="bg"
                                MinHeight="37"
                                Margin="0,0,1,-1"
                                Background="Transparent"
                                BorderBrush="{StaticResource borderBrush}"
                                BorderThickness="0,0,1,1"
                                SnapsToDevicePixels="True">
                            <ContentPresenter x:Name="TheContentPresenter"
                                              Margin="0,0,5,0"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="true">
                                <Setter TargetName="bg" Property="Background" Value="Red" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Foreground" Value="{StaticResource DefaultForeground}" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    <Grid Grid.Row="1">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="300" />
        </Grid.ColumnDefinitions>

        <DataGrid Grid.Row="0"
                  Grid.Column="0"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  CellStyle="{StaticResource cellStyle}"
                  ColumnHeaderHeight="30"
                  ItemsSource="{Binding TestDataCollection}"
                  SelectionMode="Single"
                  Style="{x:Null}">
            <DataGrid.Columns>
                <DataGridTextColumn Width="100"
                                    Binding="{Binding sbbh}"
                                    Header="设备编号">
                    <DataGridTextColumn.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Setter Property="FontSize" Value="16" />
                            <Setter Property="FontWeight" Value="Bold" />
                            <Setter Property="HorizontalContentAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.CellStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Width="80"
                                    Binding="{Binding sm}"
                                    Header="扫描" />
                <DataGridHyperlinkColumn Width="100"
                                         Binding="{Binding lhcsdy}"
                                         Header="老化参数调用" />
                <DataGridTextColumn Width="80"
                                    Binding="{Binding acsr}"
                                    Header="AC 输入" />
                <DataGridTextColumn Width="80"
                                    Binding="{Binding aczt}"
                                    Header="AC 状态" />
                <DataGridTextColumn Width="80"
                                    Binding="{Binding zs}"
                                    Header="总数" />
                <DataGridTextColumn Width="80"
                                    Binding="{Binding hg}"
                                    Header="合格" />
                <DataGridTextColumn Width="80"
                                    Binding="{Binding bl}"
                                    Header="不良" />
                <DataGridTextColumn Width="80"
                                    Binding="{Binding bll}"
                                    Header="不良率" />
                <DataGridTemplateColumn Width="*">
                    <DataGridTemplateColumn.HeaderTemplate>
                        <DataTemplate>
                            <TextBlock Text="产品型号" />
                        </DataTemplate>
                    </DataGridTemplateColumn.HeaderTemplate>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition Width="auto" />
                                </Grid.ColumnDefinitions>
                                <TextBox />
                                <Button Grid.Column="1"
                                        Width="60"
                                        Content="..." />
                            </Grid>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Binding="{Binding cpddh}" Header="产品订单号" />
            </DataGrid.Columns>
        </DataGrid>

        <Grid Grid.Row="0" Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <syscontrols:ButtonEx Grid.Column="0"
                                  Command="{Binding SDJCCommand}"
                                  Content="上电检测"
                                  NormalImage="/BITools;component/Images/detail.png"
                                  NormalImagePlacement="Top" />
            <syscontrols:ButtonEx Grid.Column="1"
                                  Command="{Binding KSCSCommand}"
                                  Content="开始测试"
                                  DisableImage="/BITools;component/Images/begin_disable.png"
                                  NormalImage="/BITools;component/Images/begin.png"
                                  NormalImagePlacement="Top" />
            <syscontrols:ButtonEx Grid.Column="2"
                                  Command="{Binding ZTCSCommand}"
                                  Content="暂停测试"
                                  DisableImage="/BITools;component/Images/pause_disable.png"
                                  NormalImage="/BITools;component/Images/pause.png"
                                  NormalImagePlacement="Top" />
            <syscontrols:ButtonEx Grid.Column="3"
                                  Command="{Binding TZCSCommand}"
                                  Content="停止测试"
                                  DisableImage="/BITools;component/Images/stop_disable.png"
                                  IsEnabled="False"
                                  NormalImage="/BITools;component/Images/stop.png"
                                  NormalImagePlacement="Top" />
        </Grid>

        <Grid Grid.Row="1" Grid.Column="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100" />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <syscontrols:ButtonEx Grid.Column="0"
                                  Content="老化总时间"
                                  NormalImage="/BITools;component/Images/refresh.png"
                                  NormalImagePlacement="Right" />

            <TextBox Grid.Column="1" />

            <syscontrols:ButtonEx Grid.Column="2"
                                  Content="老化时间"
                                  NormalImage="/BITools;component/Images/refresh.png"
                                  NormalImagePlacement="Right" />

            <TextBox Grid.Column="3" />

            <TextBlock Grid.Column="4" Text="老化进度" />
            <TextBlock Grid.Column="5" Text="测试等待 ...0%" />
        </Grid>

        <Grid Grid.Row="1" Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <syscontrols:ButtonEx Grid.Column="0"
                                  Command="{Binding CKSJCommand}"
                                  Content="查看数据"
                                  NormalImage="/BITools;component/Images/detail.png" />
            <syscontrols:ButtonEx Grid.Column="1"
                                  Command="{Binding CKTXMCommand}"
                                  Content="产品条形码"
                                  NormalImage="/BITools;component/Images/bar_code.png" />
            <syscontrols:ButtonEx Grid.Column="2"
                                  Command="{Binding BJFWCommand}"
                                  Content="报警复位"
                                  NormalImage="/BITools;component/Images/light.png" />
        </Grid>

        <!--  测试状态说明  -->
        <Grid Grid.Row="2"
              Grid.Column="0"
              Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Text="测试状态说明" />

            <StackPanel Grid.Column="2" Orientation="Horizontal">
                <Button Width="80"
                        BorderThickness="0"
                        Content="脱机"
                        Style="{StaticResource btntj}" />
                <Button Width="100"
                        BorderThickness="0"
                        Content="下载参数中"
                        Style="{StaticResource btndownparam}" />
                <Button Width="100"
                        BorderThickness="0"
                        Content="停止拉载"
                        Style="{StaticResource btntzlz}" />
                <Button Width="100"
                        BorderThickness="0"
                        Content="拉载异常"
                        Style="{StaticResource btnlzyc}" />
                <Button Width="80"
                        BorderThickness="0"
                        Content="无产品"
                        Style="{StaticResource btnwcp}" />
                <Button Width="80"
                        BorderThickness="0"
                        Content="欠压"
                        Style="{StaticResource btnqy}" />
                <Button Width="80"
                        BorderThickness="0"
                        Content="欠流"
                        Style="{StaticResource btnql}" />
                <Button Width="80"
                        BorderThickness="0"
                        Content="过压"
                        Style="{StaticResource btngy}" />
                <Button Width="80"
                        BorderThickness="0"
                        Content="过流"
                        Style="{StaticResource btngl}" />
                <Button Width="80"
                        BorderThickness="0"
                        Content="无输出"
                        Style="{StaticResource btnwsc}" />
                <Button Width="80"
                        BorderThickness="0"
                        Content="合格"
                        Style="{StaticResource btnhg}" />
                <Button Width="100"
                        BorderThickness="0"
                        Content="负载保护"
                        Style="{StaticResource btnfzbh}" />
            </StackPanel>
        </Grid>

        <Grid Grid.Row="3"
              Grid.Column="0"
              Grid.ColumnSpan="2"
              Background="#CCDFF0">
            <Grid.Resources>
                <Style TargetType="TextBlock">
                    <Setter Property="HorizontalAlignment" Value="Center" />
                    <Setter Property="VerticalAlignment" Value="Center" />
                    <Setter Property="TextAlignment" Value="Center" />
                    <Setter Property="Foreground" Value="#000000" />
                </Style>
            </Grid.Resources>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="30" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Border Grid.Column="0"
                    Margin="1"
                    BorderBrush="{StaticResource borderBrush}"
                    BorderThickness="1">
                <TextBlock Text="L1" />
            </Border>
            <syscontrols:BlockView Grid.Column="1" />
            <syscontrols:BlockView Grid.Column="2" />
            <syscontrols:BlockView Grid.Column="3" />
            <syscontrols:BlockView Grid.Column="4" />
            <syscontrols:BlockView Grid.Column="5" />
            <syscontrols:BlockView Grid.Column="6" />
            <syscontrols:BlockView Grid.Column="7" />
            <syscontrols:BlockView Grid.Column="8" />
        </Grid>
    </Grid>
</UserControl>
