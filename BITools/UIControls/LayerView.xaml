<UserControl
    x:Class="BITools.UIControls.LayerView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:BITools.UIControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:syscontrols="clr-namespace:BITools.UIControls"
    d:DesignHeight="300"
    d:DesignWidth="1000"
    mc:Ignorable="d">
    <UserControl.Resources>
        <SolidColorBrush x:Key="borderBrush" Color="#CCCCCC" />

        <Style TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>

        <Style x:Key="cellStyle" TargetType="DataGridCell">
            <Setter Property="FontSize" Value="14" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="RenderOptions.BitmapScalingMode" Value="NearestNeighbor" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type DataGridCell}">
                        <Border
                            Name="bg"
                            MinHeight="37"
                            Margin="0,0,1,-1"
                            Background="Transparent"
                            BorderBrush="{StaticResource borderBrush}"
                            BorderThickness="0,0,1,1"
                            SnapsToDevicePixels="True">
                            <ContentPresenter
                                x:Name="TheContentPresenter"
                                Margin="0,0,5,0"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="true">
                                <Setter TargetName="bg" Property="Background" Value="Red" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Foreground" Value="{StaticResource DefaultForeground}" />
                </Trigger>
            </Style.Triggers>
        </Style>

    </UserControl.Resources>
    <Grid Grid.Row="1">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="300" />
        </Grid.ColumnDefinitions>

        <DataGrid
            Grid.Row="0"
            Grid.Column="0"
            AutoGenerateColumns="False"
            BorderBrush="{StaticResource sepeatorLineBrush}"
            CanUserAddRows="False"
            CanUserDeleteRows="False"
            ColumnHeaderHeight="30"
            ItemsSource="{Binding TestDataCollection}"
            SelectionMode="Single">
            <DataGrid.RowHeaderStyle>
                <Style TargetType="DataGridRowHeader">
                    <Setter Property="Width" Value="0" />
                </Style>
            </DataGrid.RowHeaderStyle>
            <DataGrid.Columns>
                <DataGridTextColumn
                    Width="100"
                    Binding="{Binding sbbh}"
                    Header="设备编号">
                    <DataGridTextColumn.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Setter Property="FontSize" Value="16" />
                            <Setter Property="FontWeight" Value="Bold" />
                            <Setter Property="HorizontalContentAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.CellStyle>
                </DataGridTextColumn>
                <DataGridTextColumn
                    Width="80"
                    Binding="{Binding sm}"
                    Header="扫描" />
                <DataGridHyperlinkColumn
                    Width="100"
                    Binding="{Binding lhcsdy}"
                    Header="老化参数调用" />
                <DataGridTextColumn
                    Width="80"
                    Binding="{Binding acsr}"
                    Header="AC 输入" />
                <DataGridTextColumn
                    Width="80"
                    Binding="{Binding aczt}"
                    Header="AC 状态" />
                <DataGridTextColumn
                    Width="60"
                    Binding="{Binding zs}"
                    Header="总数" />
                <DataGridTextColumn
                    Width="60"
                    Binding="{Binding hg}"
                    Header="合格">
                    <DataGridTextColumn.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Setter Property="Foreground" Value="#00ff00" />
                        </Style>
                    </DataGridTextColumn.CellStyle>
                </DataGridTextColumn>
                <DataGridTextColumn
                    Width="60"
                    Binding="{Binding bl}"
                    Header="不良">
                    <DataGridTextColumn.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Setter Property="Foreground" Value="#ff0000" />
                        </Style>
                    </DataGridTextColumn.CellStyle>
                </DataGridTextColumn>
                <DataGridTextColumn
                    Width="60"
                    Binding="{Binding bll}"
                    Header="不良率" />
                <DataGridTemplateColumn Width="*">
                    <DataGridTemplateColumn.HeaderTemplate>
                        <DataTemplate>
                            <TextBlock Text="产品型号" />
                        </DataTemplate>
                    </DataGridTemplateColumn.HeaderTemplate>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition Width="auto" />
                                </Grid.ColumnDefinitions>
                                <TextBox IsReadOnly="True" Text="{Binding cpxh}" />
                                <Button
                                    Grid.Column="1"
                                    Width="40"
                                    Command="{Binding SelectCPXHCommand}"
                                    Content="..."
                                    DataContext="{Binding DataContext, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=UserControl}}" />
                            </Grid>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn
                    Width="150"
                    Binding="{Binding cpddh}"
                    Header="产品订单号" />
            </DataGrid.Columns>
        </DataGrid>

        <Grid
            Grid.Row="0"
            Grid.Column="1"
            Background="#d4e4f3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <syscontrols:ButtonEx
                Grid.Column="0"
                Height="50"
                BorderThickness="0"
                Command="{Binding SDJCCommand}"
                Content="上电检测"
                NormalImage="/BITools;component/Images/detail.png"
                NormalImagePlacement="Top" />
            <syscontrols:ButtonEx
                Grid.Column="1"
                Height="50"
                BorderThickness="0"
                Command="{Binding KSCSCommand}"
                Content="开始测试"
                DisableImage="/BITools;component/Images/begin_disable.png"
                NormalImage="/BITools;component/Images/begin.png"
                NormalImagePlacement="Top" />
            <syscontrols:ButtonEx
                Grid.Column="2"
                Height="50"
                BorderThickness="0"
                Command="{Binding ZTCSCommand}"
                Content="暂停测试"
                DisableImage="/BITools;component/Images/pause_disable.png"
                NormalImage="/BITools;component/Images/pause.png"
                NormalImagePlacement="Top" />
            <syscontrols:ButtonEx
                Grid.Column="3"
                Height="50"
                BorderThickness="0"
                Command="{Binding TZCSCommand}"
                Content="停止测试"
                DisableImage="/BITools;component/Images/stop_disable.png"
                IsEnabled="True"
                NormalImage="/BITools;component/Images/stop.png"
                NormalImagePlacement="Top" />
        </Grid>

        <Grid Grid.Row="1" Grid.Column="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <syscontrols:ButtonEx
                Grid.Column="0"
                Width="100"
                Command="{Binding LHSJCommand}"
                Content="{Binding LHSJName}"
                NormalImage="/BITools;component/Images/refresh.png"
                NormalImagePlacement="Right" />

            <TextBox
                Grid.Column="1"
                Width="120"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                Text="{Binding Lhzsj, Converter={StaticResource intToTimeSpan}}" />

            <syscontrols:ButtonEx
                Grid.Column="2"
                Width="100"
                Content="老化时间"
                NormalImage="/BITools;component/Images/refresh.png"
                NormalImagePlacement="Right" />

            <TextBox
                Grid.Column="3"
                Width="120"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                Text="{Binding Lhsj, Converter={StaticResource intToTimeSpan}}" />

            <TextBlock
                Grid.Column="4"
                Margin="5,0,0,0"
                Text="老化进度" />
            <TextBlock Grid.Column="5" Text="测试等待 ...0%" />
        </Grid>

        <Grid Grid.Row="1" Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <syscontrols:ButtonEx
                Grid.Column="0"
                BorderThickness="0,1,0,0"
                Command="{Binding CKSJCommand}"
                Content="查看数据"
                NormalImage="/BITools;component/Images/detail.png" />
            <syscontrols:ButtonEx
                Grid.Column="1"
                BorderThickness="0,1,0,0"
                Command="{Binding CKTXMCommand}"
                Content="产品条形码"
                NormalImage="/BITools;component/Images/bar_code.png" />
            <syscontrols:ButtonEx
                Grid.Column="2"
                BorderThickness="0,1,0,0"
                Command="{Binding BJFWCommand}"
                Content="报警复位"
                NormalImage="/BITools;component/Images/light.png" />
        </Grid>

        <!--  测试状态说明  -->
        <Grid
            Grid.Row="2"
            Grid.Column="0"
            Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Text="测试状态说明" />

            <StackPanel
                Grid.Column="2"
                Background="#d4e4f3"
                Orientation="Horizontal">

                <!--  脱机  -->
                <Grid Margin="5,0,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="60" />
                    </Grid.ColumnDefinitions>
                    <Ellipse
                        Grid.Column="0"
                        Width="16"
                        Height="16"
                        Fill="{StaticResource dotColorBrush}"
                        Visibility="{Binding Istj, Converter={StaticResource boolToVisibility}}" />
                    <TextBlock
                        Grid.Column="1"
                        Margin="5,0,0,0"
                        Text="脱机" />
                </Grid>

                <!--  下载参数中  -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="80" />
                    </Grid.ColumnDefinitions>
                    <Image
                        Grid.Column="0"
                        Width="16"
                        Height="16"
                        Source="/BITools;component/Images/refresh.png"
                        Visibility="{Binding Isxzczz, Converter={StaticResource boolToVisibility}}" />
                    <TextBlock
                        Grid.Column="1"
                        Margin="5,0,0,0"
                        Text="下载参数中" />
                </Grid>

                <!--  停止拉载  -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="60" />
                    </Grid.ColumnDefinitions>
                    <Image
                        Grid.Column="0"
                        Width="16"
                        Height="16"
                        Source="/BITools;component/Images/stop_pull.png"
                        Visibility="{Binding Istzlz, Converter={StaticResource boolToVisibility}}" />
                    <TextBlock
                        Grid.Column="1"
                        Margin="5,0,0,0"
                        Text="停止拉载" />
                </Grid>

                <!--  拉载异常  -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="60" />
                    </Grid.ColumnDefinitions>
                    <Ellipse
                        Grid.Column="0"
                        Width="16"
                        Height="16"
                        Fill="#f780ec"
                        Visibility="{Binding Islzyc, Converter={StaticResource boolToVisibility}}" />
                    <TextBlock
                        Grid.Column="1"
                        Margin="5,0,0,0"
                        Text="拉载异常" />
                </Grid>

                <!--  无产品  -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="60" />
                    </Grid.ColumnDefinitions>
                    <Rectangle
                        Grid.Column="0"
                        Width="16"
                        Height="16"
                        Stroke="Black"
                        StrokeThickness="1"
                        Visibility="{Binding Iswcp, Converter={StaticResource boolToVisibility}}" />
                    <TextBlock
                        Grid.Column="1"
                        Margin="5,0,0,0"
                        Text="无产品" />
                </Grid>

                <!--  欠压  -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="60" />
                    </Grid.ColumnDefinitions>
                    <Ellipse
                        Grid.Column="0"
                        Width="16"
                        Height="16"
                        Fill="#2dfbd9"
                        Visibility="{Binding Isqy, Converter={StaticResource boolToVisibility}}" />
                    <TextBlock
                        Grid.Column="1"
                        Margin="5,0,0,0"
                        Text="欠压" />
                </Grid>

                <!--  欠流  -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="60" />
                    </Grid.ColumnDefinitions>
                    <Ellipse
                        Grid.Column="0"
                        Width="16"
                        Height="16"
                        Fill="Yellow"
                        Visibility="{Binding Isql, Converter={StaticResource boolToVisibility}}" />
                    <TextBlock
                        Grid.Column="1"
                        Margin="5,0,0,0"
                        Text="欠流" />
                </Grid>

                <!--  过压  -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="60" />
                    </Grid.ColumnDefinitions>
                    <Ellipse
                        Grid.Column="0"
                        Width="16"
                        Height="16"
                        Fill="Blue"
                        Visibility="{Binding Isgy, Converter={StaticResource boolToVisibility}}" />
                    <TextBlock
                        Grid.Column="1"
                        Margin="5,0,0,0"
                        Text="过压" />
                </Grid>

                <!--  过流  -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="60" />
                    </Grid.ColumnDefinitions>
                    <Ellipse
                        Grid.Column="0"
                        Width="16"
                        Height="16"
                        Fill="Purple"
                        Visibility="{Binding Isgl, Converter={StaticResource boolToVisibility}}" />
                    <TextBlock
                        Grid.Column="1"
                        Margin="5,0,0,0"
                        Text="过流" />
                </Grid>

                <!--  无输出  -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="60" />
                    </Grid.ColumnDefinitions>
                    <Ellipse
                        Grid.Column="0"
                        Width="16"
                        Height="16"
                        Fill="Red"
                        Visibility="{Binding Iswsc, Converter={StaticResource boolToVisibility}}" />
                    <TextBlock
                        Grid.Column="1"
                        Margin="5,0,0,0"
                        Text="无输出" />
                </Grid>

                <!--  合格  -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="60" />
                    </Grid.ColumnDefinitions>
                    <Ellipse
                        Grid.Column="0"
                        Width="16"
                        Height="16"
                        Fill="Green"
                        Visibility="{Binding Ishg, Converter={StaticResource boolToVisibility}}" />
                    <TextBlock
                        Grid.Column="1"
                        Margin="5,0,0,0"
                        Text="合格" />
                </Grid>

                <!--  负载保护  -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="60" />
                    </Grid.ColumnDefinitions>
                    <Ellipse
                        Grid.Column="0"
                        Width="16"
                        Height="16"
                        Fill="Blue"
                        Visibility="{Binding Isfzbh, Converter={StaticResource boolToVisibility}}" />
                    <TextBlock
                        Grid.Column="1"
                        Margin="5,0,0,0"
                        Text="负载保护" />
                </Grid>

            </StackPanel>
        </Grid>

        <Grid
            Grid.Row="3"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Background="#CCDFF0">
            <Grid.Resources>
                <Style TargetType="TextBlock">
                    <Setter Property="HorizontalAlignment" Value="Center" />
                    <Setter Property="VerticalAlignment" Value="Center" />
                    <Setter Property="TextAlignment" Value="Center" />
                    <Setter Property="Foreground" Value="#000000" />
                </Style>
            </Grid.Resources>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="30" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Border
                Grid.Column="0"
                Margin="1"
                BorderBrush="{StaticResource borderBrush}"
                BorderThickness="1">
                <TextBlock Text="L1" />
            </Border>
            <syscontrols:BlockView Grid.Column="1" DataContext="{Binding GHGroup1}" />
            <syscontrols:BlockView Grid.Column="2" DataContext="{Binding GHGroup2}" />
            <syscontrols:BlockView Grid.Column="3" DataContext="{Binding GHGroup3}" />
            <syscontrols:BlockView Grid.Column="4" DataContext="{Binding GHGroup4}" />
            <syscontrols:BlockView Grid.Column="5" DataContext="{Binding GHGroup5}" />
            <syscontrols:BlockView Grid.Column="6" DataContext="{Binding GHGroup6}" />
            <syscontrols:BlockView Grid.Column="7" DataContext="{Binding GHGroup7}" />
            <syscontrols:BlockView Grid.Column="8" DataContext="{Binding GHGroup8}" />
        </Grid>
    </Grid>
</UserControl>
